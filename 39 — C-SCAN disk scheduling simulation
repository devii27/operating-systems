/* cscan_disk.c */
#include <stdio.h>
#include <stdlib.h>

int main(){
    int head = 50;
    int req[] = {95,180,34,119,11,123,62,64};
    int n = sizeof(req)/sizeof(req[0]);
    int disk_size = 199;
    int left[20], right[20], l=0, r=0;
    for(int i=0;i<n;i++){
        if(req[i] < head) left[l++]=req[i];
        else right[r++]=req[i];
    }
    for(int i=0;i<l-1;i++) for(int j=i+1;j<l;j++) if(left[i]>left[j]){int t=left[i];left[i]=left[j];left[j]=t;}
    for(int i=0;i<r-1;i++) for(int j=i+1;j<r;j++) if(right[i]>right[j]){int t=right[i];right[i]=right[j];right[j]=t;}

    int dist=0;
    /* service right */
    for(int i=0;i<r;i++){ dist += abs(head - right[i]); head = right[i]; }
    /* jump to start (0) */
    dist += abs(head - 0); head = 0;
    /* service left from start */
    for(int i=0;i<l;i++){ dist += abs(head - left[i]); head = left[i]; }

    printf("C-SCAN total head movement = %d\n", dist);
    return 0;
}
