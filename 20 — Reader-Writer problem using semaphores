/* reader_writer.c */
#include <stdio.h>
#include <pthread.h>
#include <semaphore.h>

int data = 0, readcount = 0;
sem_t rw_mutex, mutex;

void *reader(void *id) {
    int RID = *(int*)id;
    sem_wait(&mutex);
    readcount++;
    if(readcount==1) sem_wait(&rw_mutex);
    sem_post(&mutex);

    printf("Reader %d reads data = %d\n", RID, data);

    sem_wait(&mutex);
    readcount--;
    if(readcount==0) sem_post(&rw_mutex);
    sem_post(&mutex);
    return NULL;
}

void *writer(void *id) {
    int WID = *(int*)id;
    sem_wait(&rw_mutex);
    data += 10;
    printf("Writer %d updated data to %d\n", WID, data);
    sem_post(&rw_mutex);
    return NULL;
}

int main(){
    pthread_t r1,r2,w1;
    sem_init(&rw_mutex,0,1); sem_init(&mutex,0,1);
    int a=1,b=2,c=1;
    pthread_create(&r1,NULL,reader,&a);
    pthread_create(&w1,NULL,writer,&b);
    pthread_create(&r2,NULL,reader,&c);
    pthread_join(r1,NULL); pthread_join(w1,NULL); pthread_join(r2,NULL);
    return 0;
}
